# tar can create/decompress zstd-compressed tarballs

AT_SETUP([compress: zstd])
AT_KEYWORDS([compression zstd])

unset TAR_OPTIONS

AT_CHECK([
AT_GZIP_PREREQ([zstd])

touch empty
# Create with --zstd:
tar --zstd -cf - empty 2>err > k.tar.zst || exit 1
test -s err && exit 1
tar tf k.tar.zst 2>err > out || exit 1
test "$(cat out)" = empty || exit 1
test -s err && exit 1

# Ensure -ac works with an -f-specified .zst-suffixed name.
tar -acf k2.tar.zst empty 2>err > out || exit 1
cmp k2.tar.zst k.tar.zst || exit 1
test -s err && exit 1

# Extraction: ensure the .zst suffix is recognized.
rm -f empty || exit 1
tar xf k.tar.zst 2>err > out || exit 1
test -s err && exit 1
test -f empty || exit 1

if test -n 'tzst'; then
  # Extraction: ensure the .tzst suffix is also recognized.
  mv k.tar.zst k.tzst || exit 1
  rm -f empty
  tar xf k.tzst 2>err > out || exit 1
  test -s err && exit 1
  test -f empty || exit 1
else
  :
fi

],
[0],
[],
[],
[],[])

AT_CLEANUP
