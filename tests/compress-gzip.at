# tar can create/decompress gzip-compressed tarballs

AT_SETUP([compress: gzip])
AT_KEYWORDS([compression gzip])

unset TAR_OPTIONS

AT_CHECK([
AT_GZIP_PREREQ([gzip])

touch empty
# Create with --gzip:
tar --gzip -cf - empty 2>err > k.tar.gz || exit 1
test -s err && exit 1
tar tf k.tar.gz 2>err > out || exit 1
test "$(cat out)" = empty || exit 1
test -s err && exit 1

# Ensure -ac works with an -f-specified .gz-suffixed name.
tar -acf k2.tar.gz empty 2>err > out || exit 1
cmp k2.tar.gz k.tar.gz || exit 1
test -s err && exit 1

# Extraction: ensure the .gz suffix is recognized.
rm -f empty || exit 1
tar xf k.tar.gz 2>err > out || exit 1
test -s err && exit 1
test -f empty || exit 1

if test -n 'tgz'; then
  # Extraction: ensure the .tgz suffix is also recognized.
  mv k.tar.gz k.tgz || exit 1
  rm -f empty
  tar xf k.tgz 2>err > out || exit 1
  test -s err && exit 1
  test -f empty || exit 1
else
  :
fi

],
[0],
[],
[],
[],[])

AT_CLEANUP
