# tar can create/decompress bzip2-compressed tarballs

AT_SETUP([compress: bzip2])
AT_KEYWORDS([compression bzip2])

unset TAR_OPTIONS

AT_CHECK([
AT_GZIP_PREREQ([bzip2])

touch empty
# Create with --bzip2:
tar --bzip2 -cf - empty 2>err > k.tar.bz2 || exit 1
test -s err && exit 1
tar tf k.tar.bz2 2>err > out || exit 1
test "$(cat out)" = empty || exit 1
test -s err && exit 1

# Ensure -ac works with an -f-specified .bz2-suffixed name.
tar -acf k2.tar.bz2 empty 2>err > out || exit 1
cmp k2.tar.bz2 k.tar.bz2 || exit 1
test -s err && exit 1

# Extraction: ensure the .bz2 suffix is recognized.
rm -f empty || exit 1
tar xf k.tar.bz2 2>err > out || exit 1
test -s err && exit 1
test -f empty || exit 1

if test -n 'tbz2'; then
  # Extraction: ensure the .tbz2 suffix is also recognized.
  mv k.tar.bz2 k.tbz2 || exit 1
  rm -f empty
  tar xf k.tbz2 2>err > out || exit 1
  test -s err && exit 1
  test -f empty || exit 1
else
  :
fi

],
[0],
[],
[],
[],[])

AT_CLEANUP
