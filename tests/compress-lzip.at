# tar can create/decompress lzip-compressed tarballs

AT_SETUP([compress: lzip])
AT_KEYWORDS([compression lzip])

unset TAR_OPTIONS

AT_CHECK([
AT_GZIP_PREREQ([lzip])

touch empty
# Create with --lzip:
tar --lzip -cf - empty 2>err > k.tar.lz || exit 1
test -s err && exit 1
tar tf k.tar.lz 2>err > out || exit 1
test "$(cat out)" = empty || exit 1
test -s err && exit 1

# Ensure -ac works with an -f-specified .lz-suffixed name.
tar -acf k2.tar.lz empty 2>err > out || exit 1
cmp k2.tar.lz k.tar.lz || exit 1
test -s err && exit 1

# Extraction: ensure the .lz suffix is recognized.
rm -f empty || exit 1
tar xf k.tar.lz 2>err > out || exit 1
test -s err && exit 1
test -f empty || exit 1

if test -n ''; then
  # Extraction: ensure the . suffix is also recognized.
  mv k.tar.lz k. || exit 1
  rm -f empty
  tar xf k. 2>err > out || exit 1
  test -s err && exit 1
  test -f empty || exit 1
else
  :
fi

],
[0],
[],
[],
[],[])

AT_CLEANUP
